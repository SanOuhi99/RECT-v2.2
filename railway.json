{
  "builds": [
    {
      "src": "backend/",
      "use": "@railway/plugin-python"
    },
    {
      "src": "frontend/",
      "use": "@railway/plugin-node"
    }
  ],
  "deployments": [
    {
      "name": "Backend",
      "command": "uvicorn app.main:app --host 0.0.0.0 --port ${PORT}"
    },
    {
      "name": "Frontend",
      "command": "npm run build && npm run start"
    }
  ]
}
