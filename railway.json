services:
  frontend:
    build: frontend
    start: npx serve -s dist -l $PORT   # or whatever your build produces
    healthcheckPath: "/"

  backend:
    build: backend
    start: uvicorn main:app --host 0.0.0.0 --port $PORT
    healthcheckPath: "/health"

  worker:
    build: worker
    start: celery -A tasks worker --loglevel=info
